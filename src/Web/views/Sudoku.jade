mixin SubView(item,i)
    div(class = "col-md-#{item.Width} col-sm-#{item.Width}  col-lg-#{item.Width}")
        case item.ViewFile
            when './includes/List'
                include ./includes/List
            when './includes/Group'
                include ./includes/Group
            when './includes/Map'
                include ./includes/Map
            when './includes/Item'
                include ./includes/Item
            when './includes/linechart'
                include ./includes/linechart
extends default
block content
    .row
        -if(view){
            -for(i=0;i<view.data.Items.length;i++){
                    +SubView(view.data.Items[i],i)
            

            -}
